alias j=jobs
alias l=ls
alias ll='ls -l'
alias la='ls -Fa'
alias lsd='ls -ld *(-/DN)'  # List only directories and symbolic
alias lsa='ls -ld .*'       # List only file beginning with "."
alias dir='ls -algF'
